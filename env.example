# Telegram Bot Configuration
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
ADMIN_TG_ID=123456789

# 3x-ui Panel Configuration
XUI_BASE_URL=https://your-server.com
XUI_USERNAME=admin
XUI_PASSWORD=your_password

# VLESS Connection Settings (Optional - используются как fallback)
# Бот автоматически получает ссылки из 3x-ui API
# Эти настройки нужны только если API не вернет ссылку
VLESS_SERVER=your-server.com
VLESS_PORT=443
VLESS_SNI=your-server.com
VLESS_SECURITY=tls
VLESS_TYPE=tcp

# Database (по умолчанию SQLite, менять не нужно)
DATABASE_URL=sqlite+aiosqlite:///./data/vpn_bot.db

# Logging (опционально)
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
LOG_ROTATION=00:00
LOG_RETENTION=30 days
